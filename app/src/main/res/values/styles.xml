<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="style_bar_layout">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="titleMarginStart">20dp</item>
    </style>

    <style name="style_button_enabled">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="style_button_disabled">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color_grey</item>
    </style>

    <style name="style_button_add_new">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/grey</item>
    </style>

    <style name="style_active_item_task_deadline">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_completed_item_task_deadline">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/text_color_grey</item>
    </style>

    <style name="style_active_item_task_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_completed_item_task_title">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_color_grey</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style_item_task_description">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_color_grey</item>
    </style>

    <style name="style_create_new_task_importance">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_text_button_importance">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_text_start">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="style_hint_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_color_grey</item>
        <item name="android:textColorHint">@color/text_color_grey</item>
    </style>

    <style name="style_text_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>